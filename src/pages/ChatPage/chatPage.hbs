<div class="chat">
  <aside class="chat__left-panel">
    <div class="chat__links">
      {{{linkAddChat}}}
      {{{linkProfile}}}
    </div>
    <input type="text" class="chat__search" placeholder="Search">
    <hr class="chat__line">
    {{{chatsList}}}
  </aside>
  <main class="chat__main">
    <div class="chat-header">
      <div class="chat-header__avatar"></div>
      <p class="chat-header__name">Чат №1</p>
      <button class="chat-header__btn"></button>
    </div>
    <ul class="message-list">
      {{{message1}}}
      {{{message2}}}
      {{{message3}}}
      {{{message4}}}
      {{{message5}}}
      {{{message6}}}
      {{{message7}}}
      {{{message8}}}
    </ul>
    <div class="message-enter">
      <button class="message-enter__menu-btn"></button>
      <form class="message-enter__form" novalidate name="chat">
        <input type="text" class="message-enter__input input" name="message" placeholder="Message" autocomplete="off" required>
        {{{button}}}
      </form>
    </div>
  </main>
</div>
